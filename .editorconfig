# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
# indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
line_length = 100

[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.ini]
indent_style = space

[*.sql]
indent_style = space

[*.md]
indent_style = space
indent_size = 2

[*.sh]
indent_style = tab

[Makefile]
indent_style = tab
